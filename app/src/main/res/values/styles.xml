<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/titleTxtDim</item>
    </style>

    <style name="title1" parent="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/marginTitleSides</item>
        <item name="android:paddingStart">@dimen/marginTitleSides</item>
    </style>

    <style name="quiz" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/quizPadding</item>
        <item name="android:layout_marginEnd">@dimen/quizPadding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/marginQuestion</item>
    </style>

    <style name="question" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/questionText</item>
    </style>

    <style name="answer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/paddingAnswer</item>
        <item name="android:textColor">@color/questionText</item>
        <item name="android:textSize">@dimen/answerText</item>
    </style>


</resources>
